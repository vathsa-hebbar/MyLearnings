// C# Program to illustrate the
// above given pattern of numbers
using System;

class GFG {

	public static void Main()
	{

		int n = 5, i, j, num = 1, gap;

		gap = n - 1;

		for (j = 1; j <= n; j++) {
			num = j;

			for (i = 1; i <= gap; i++)
				Console.Write(" ");

			gap--;

			for (i = 1; i <= j; i++) {
				Console.Write(num);
				num++;
			}
			num--;
			num--;
			for (i = 1; i < j; i++) {
				Console.Write(num);
				num--;
			}
			Console.WriteLine();
		}
	}
}
